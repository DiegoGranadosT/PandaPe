@using PandaPe.UI.Shared.ViewModels;
@if (candidate != null)
{
    <div class="card p-3">
        <div class="row">
            <div class="col-6">
                <label class="form-label">Nombre</label>
                <InputText type="text" class="form-control" placeholder="Carlos" @bind-Value="@candidate.Name" disabled="@Disabled" required />
            </div>
            <div class="col-6">
                <label class="form-label">Apellido</label>
                <InputText type="text" class="form-control" placeholder="Lopez" @bind-Value="@candidate.Surname" disabled="@Disabled" required />
            </div>
            <div class="col-6">
                <label class="form-label">Fecha de nacimiento</label>
                <InputDate TValue="DateTime" @bind-Value="@candidate.Birthdate" disabled="@Disabled" />
            </div>
            <div class="col-6">
                <label class="form-label">Correo electronico</label>
                <InputText type="email" class="form-control" placeholder="mail@example.com" @bind-Value="@candidate.Email" disabled="@Disabled" required />
            </div>
        </div>
    </div>
    <div class="card p-3">
        <h2>Experiencias</h2>
        @if (candidate.CandidateExperiences != null && candidate.CandidateExperiences.Count > 0)
        {
            @foreach (var candidateExperience in candidate.CandidateExperiences)
            {
                <div class="card p-3">

                    <div class="row">
                        <div class="col-10 row">
                            <div class="col-6">
                                <label class="form-label">Empresa</label>
                                <InputText type="text" class="form-control" @bind-Value="@candidateExperience.Company" required disabled="@Disabled" />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Cargo</label>
                                <InputText type="text" class="form-control" @bind-Value="@candidateExperience.Job" required disabled="@Disabled" />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Descripcion</label>
                                <InputText type="text" class="form-control" @bind-Value="@candidateExperience.Description" required disabled="@Disabled" />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Salario</label>
                                <InputNumber type="number" step="any" @bind-Value="@candidateExperience.Salary" max="99999999" min="1" disabled="@Disabled" />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Fecha de inicio</label>
                                <InputDate TValue="DateTime" @bind-Value="@candidateExperience.BeginDate" disabled="@Disabled" />
                            </div>
                            <div class="col-6">
                                <label class="form-label">Fecha de fin</label>
                                <InputDate TValue="DateTime?" @bind-Value="@candidateExperience.EndDate" disabled="@Disabled" />
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <h3>sin datos</h3>
        }
    </div>
}
@code {
    [Parameter]
    public CandidateViewModel candidate { get; set; }

    [Parameter]
    public bool Disabled { get; set; }
}
